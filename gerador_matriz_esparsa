import random
import math

def sparse_matrix(N: int, sparsity_percent: float,min_value: float = 1.0,max_value: float = 100.0,seed: int = None) -> list:

    if seed is not None:
        random.seed(seed)

    if(N >=10000):
        total = N*N
        sparsity_percent = 1/(pow(10,sparsity_percent)) 
        k = min(math.ceil(total * (sparsity_percent)),total)
        
    if(N>0 and N<10000):
        total = N * N
        k = min(math.ceil(total * (sparsity_percent / 100.0)), total)
    
    print(f"DimensÃ£o: {N}x{N}")
    print(f"Esparsidade: {sparsity_percent}%")
    print(f"Elementos nÃ£o nulos (k): {k}")
    print(f"------------------------------")

  
    random_indices = random.sample(range(total), k)
    result = []
    for index in random_indices:
        r = index // N
        c = index % N
        v = random.uniform(min_value, max_value)
        result.append((r, c, v))
        
    return result

if __name__ == '__main__':
    N1 = 100
    P1 = 1
    matrix1 = sparse_matrix(N1, P1)

